{
  "compilerOptions": {
    "target": "es6",
    "module": "umd",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["./**/*"],
  "exclude": ["./dist/**/*"]
}
